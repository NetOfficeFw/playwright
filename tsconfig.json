{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "*": ["./packages/playwright-mso-core/types/*.d.ts"],
      "playwright-core/lib/*": ["./packages/playwright-mso-core/src/*"],
    },
    "esModuleInterop": true,
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
  },
  "compileOnSave": true,
  "include": [
    "packages",
    "types/global.d.ts"
  ],
  "exclude": [
    "packages/*/lib",
  ]
}
